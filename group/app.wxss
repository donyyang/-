/**app.wxss**/
page {
  background-color: #f8f8f8;
  height: 100%;
  line-height: 1.6;
  font-size: 14px;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  margin: 0;
  padding: 0;
}
.container {
  height: 100%;
  box-sizing: border-box;
} 
.widget__arrow {
  width: 32rpx;
  height: 32rpx;
  transition: transform .4s;
}
.next__wrap {
    margin-top: 20rpx;
}
.next__wrap .next__btn {
    width:80%;
    margin:0 auto;
}
.section {
  display: flex;
  padding: 10rpx 20rpx;
  margin: 10rpx 0; 
}
.section label {
    align-self: center;
    flex: 2;
}
.section input {
    flex: 6;
}
.flexL {
  flex: 3;
}
.flexR {
  flex: 6;
  overflow: auto;
  text-align: right;
}
.personImg {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  border-radius: 50%;
  margin-right: 5rpx;
}
.middle {
  text-align: center;
}


.weui__cells {
  background-color: #FFFFFF;
  line-height: 1.4;
  font-size: 17px;
  overflow: hidden;
  position: relative;
}
.weui__cells__title {
  margin-top: .77em;
  margin-bottom: .3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #999999;
  font-size: 14px;
}
.weui__icon {
  width: 20px;
  height: 15px;
  margin-right: 5px;
  display: block;
}
.weui__cell {
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
}
.weui__cell:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #D9D9D9;
  color: #D9D9D9;
  transform-origin: 0 0;
  transform: scaleY(0.5);
  left: 15px;
}
.weui-cell__bd {
  flex: 1;
}
.weui-cell__ft {
  padding-right: 13px;
  position: relative;
}
.weui-cell__ft:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  top: -2px;
  position: absolute;
  margin-top: -4px;
  right: 2px;
}

/*文章*/
.item__article {
  margin: 0 0 .8em;
  max-width: 100%;
  box-sizing: border-box;
  word-wrap: break-word;
  font-size: 15px;
}
.article_head {
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  font-weight: 400;
  margin-bottom: .34em;
}
.article_date {
  display:block;
  font-weight: 400;
  font-size: 15px;
  margin-bottom: .34em;
  color: #888;
}
.article_item {
  margin: 0 0 .8em;
  padding-bottom: .8em;
  display:-webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp:2;
  text-overflow: ellipsis;
  line-height: 120%;
  border-bottom: 1px solid #D9D9D9;
}

.infoHead {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}