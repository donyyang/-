.add_activity {
    position: fixed;
    width: 100%;
    text-align: center;
    bottom: 10px;
}
.join_tips {
  padding-top: 50px;
  text-align: center;
}
.people_icon,.adress_icon,.adress_due_icon,.people_due_icon {
  display: inline-block;
  width: 12px;
  height: 16px;
  margin-right: 10px;
  vertical-align: middle;
}
.people_icon {
  height: 14px;
  background-image:url(http://q.xiaoyuanhao.com/file/8a9def1f-53b0-4553-9fc8-e56a55b920be.png);
  background-size: 100%;
}
.adress_icon {
  background-image:url(http://q.xiaoyuanhao.com/file/14097bac-efd9-4ed2-82ae-f4bda96479f6.png);
  background-size: 100%;  
  margin: 10px 10px 10px 0;
}
.adress_due_icon {
  background-image:url(http://q.xiaoyuanhao.com/file/23f1ffc3-6b80-4a8a-87ce-33fb63690be5.png);
  background-size: 100%;  
  margin: 10px 10px 10px 0;
}
.people_due_icon {
  height: 14px;
  background-image:url(http://q.xiaoyuanhao.com/file/5c3f27c7-88fb-4acd-ba0b-fb60b1176db5.png);
  background-size: 100%;  
}
.active_list {
  position: relative;
  margin-top: 10px;
}
.active_opreate {
  position: absolute;
  top: 10px;
  right: 15px;
  z-index: 20;
}
.active_mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  background-image: url(http://q.xiaoyuanhao.com/file/f4b20cce-f134-4f0f-abfc-781926155ae2.png);
  background-repeat:  no-repeat;
  background-position: 96% center;
  background-size: 25%;
  background-color: rgba(0,0,0,.1);
}