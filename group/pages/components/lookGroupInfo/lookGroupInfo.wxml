  cancel-text="取消" 
  hidden="{{modifyNameHidden}}" 
  bindconfirm="modifyNameConfir" 
  bindcancel="modifyNameCancle">
    <view class = "section">
      <label>群组名</label>
      <input bindinput = "modifyName" value = '{{ searchId.groupName }}'/>
