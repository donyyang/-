  confirm-text="确定" 
  cancel-text="取消" 
  hidden="{{modifyHeadHidden}}" 
  bindconfirm="modifyHeadConfir" 
  bindcancel="modifyHeadCancle">
  <view class = "section">
    <label style = "flex:4">我的头像</label>
    <view wx:if='{{ isModifyHead }}'>
      <image class = "personImg" bindtap = "modifyHead" src = "{{ modifyHead }}" model = "aspectFill"></image>
    </view>
    <view wx:else>
      <image class = "personImg" bindtap = "modifyHead" src = "{{ searchId.userHead }}" model = "aspectFill"></image>
    </view>
  </view>
</modal>

