</modal>
<!--昵称-->
<modal 
  title="修改" 
  confirm-text="确定" 
  cancel-text="取消" 
  hidden="{{modifyNikNameHidden}}" 
  bindconfirm="modifyNikNameConfir" 
  bindcancel="modifyNikNameCancle">
  <view class = "section">
